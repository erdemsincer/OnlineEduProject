@model UpdateCourseDto
@{
    ViewData["Title"] = "Kurs Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <!-- ID Alanı (Gizli) -->
    <input type="hidden" asp-for="CourseId" />

    <!-- Resim URL -->
    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Resim URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Kurs Adı -->
    <div class="mb-3">
        <label asp-for="CourseName" class="form-label">Kurs Adı</label>
        <input type="text" asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <!-- Fiyat -->
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyat</label>
        <input type="number" asp-for="Price" class="form-control" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Kategori -->
    <div class="mb-3">
        <label asp-for="CourseCategoryId" class="form-label">Kategori</label>
        <select asp-for="CourseCategoryId" class="form-control" asp-items="@ViewBag.courseCategories">
            <option value="">Kategori Seçin</option>
        </select>
        <span asp-validation-for="CourseCategoryId" class="text-danger"></span>
    </div>

    <!-- Ana Sayfada Göster -->
    <div class="form-check">
        <input type="checkbox" asp-for="IsShown" class="form-check-input" />
        <label asp-for="IsShown" class="form-check-label">Ana Sayfada Gösterilsin</label>
    </div>

    <!-- Kaydet Butonu -->
    <button type="submit" class="btn btn-outline-primary mt-3">Kaydet</button>
</form>
